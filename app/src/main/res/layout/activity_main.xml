<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th president of the United States ?"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#000000"
        android:elevation="10dp"
        android:padding="24dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:clipToOutline="true"
        android:background="@drawable/card_background"
       />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="#FFCC89"
        android:gravity="center"
        android:padding="12dp"
        android:text="Barack Obama"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/cercle_plus_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="196dp"
        android:clickable="true"
        android:contentDescription="Bouton plus"
        android:elevation="8dp"
        android:focusable="true"
        android:orientation="horizontal"
        android:src="@drawable/cercle_plus_icon" />

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_alignBottom="@+id/cercle_plus_icon"
        android:contentDescription="Editer"
        android:src="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/next_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="300dp"
        android:contentDescription="Next"
        android:src="@drawable/next_icon" />


